<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".InfoMuseum" >
    <TextView
        android:id="@+id/nmms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Museum :"
        android:textStyle="bold"
        android:textSize="10pt"
        android:textColor="@android:color/holo_blue_dark"/>

    <TextView
        android:id="@+id/namaTempatMakan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nmms"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_light"
        />
    <TextView
        android:id="@+id/alamatmuseum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namaTempatMakan"
        android:text="Location :"
        android:textStyle="bold"
        android:textSize="10pt"
        android:textColor="@android:color/holo_blue_dark"/>
    <TextView
        android:id="@+id/alamatTempatMakan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alamatmuseum"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_light"
         />
    <Button
        android:id="@+id/btnDirection"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/alamatTempatMakan"
        android:layout_marginTop="5dp"
        android:text="Get Direction" />

</RelativeLayout>
